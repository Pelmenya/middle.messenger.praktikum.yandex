.button {
  font-family: Inter, sans-serif;
  width: 100%;
  max-width: 280px;
  background-color: #3369f3;
  border-radius: 8px;
  padding-top: 12px;
  padding-bottom: 12px;
  outline-style: none;
  box-sizing: border-box;
  font-style: normal;
  font-weight: 500;
  font-size: 13px;
  line-height: 13px;
  text-align: center;
  color: #fff;
  border: none;
  cursor: pointer;
  box-shadow: 0px 3px 10px rgba(14, 26, 57, 0.9);
}

.button:disabled {
  box-shadow: none;
  background-color: #4bafd7;
}

.button:active {
  box-shadow: none;
}
