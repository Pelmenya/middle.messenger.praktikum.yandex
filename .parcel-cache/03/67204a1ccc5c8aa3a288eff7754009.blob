.input {
  width: 100%;
  border: none;
  outline: none;
  border-bottom: 1px solid #3369f3;
  box-sizing: border-box;
  padding-top: 8px;
  padding-bottom: 7px;
  padding-left: 0;
  padding-right: 0;
  color: #1e1e1e;
  font-family: Inter;
  font-style: normal;
  font-weight: 500;
  font-size: 13px;
  line-height: 13px;
}

.input::placeholder {
  color: #999999;
}

.input:invalid{
  color:#ff2f2f;
}


